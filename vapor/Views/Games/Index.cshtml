@model IEnumerable<vapor.Models.Game>

@{
    ViewData["Title"] = "Home";
}

<h1>Home</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-3 mb-3">
            <div class="card bg-dark text-black h-100">
                <div class="embed-responsive embed-responsive-16by9">
                    <img class="card-img card-img-top embed-responsive-item" src=@item.images.FirstOrDefault().imageUrl>
                </div>
                <div class="card-body d-flex flex-column">
                    <h4 class="card-title">@item.name</h4>
                    <h5 class="card-title">@item.developer.name</h5>
                    @*<p class="card-text">@item.description</p>*@

                    <div class="mb-2">
                        <span class="badge badge-secondary">temp1</span>
                        <span class="badge badge-secondary">temp2</span>
                        <span class="badge badge-secondary">temp3</span>
                        <span class="badge badge-secondary">temp4</span>

                        @foreach (var genre in item.generes)
                        {
                            <span class="badge badge-secondary">@genre.name</span>

                        }
                    </div>
                    <div calss="align-self-end" style="margin-top: auto;">
                        <a asp-action="Details" asp-route-id="@item.id" class="btn btn-primary">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger">Delete</a>
                    </div>

                </div>
            </div>
        </div>
    }
</div>
