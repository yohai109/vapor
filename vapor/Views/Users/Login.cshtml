@model vapor.Models.User

@{
    ViewData["Title"] = "Login";
    @*    Layout = "_LoginLayout";*@
}

<h1 class="main-title">Vapor. Conquer The Battlefield </h1>

<hr />
<div class="profile-card">

    <div class="row text-center text-white d-flex justify-content-center">
        <div class="col-md-4 text-center text-white ">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control text-center" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
            @if (ViewBag.Error != null)
            {
                <div class="text-danger">@ViewBag.Error</div>
            }
        </div>
    </div>
    <div class="row text-center text-white register-now__note">
        Not registered?
        <a asp-action="Register" class="register-now__button">
            <button class="btn btn-primary">
                Click here
            </button>

        </a>
        to register As Customer!
    </div>

    <div class="row text-center text-white register-now__note">
        Not registered?
        <a asp-action="RegisterDeveloper" class="register-now__button">
            <button class="btn btn-primary">
                Click here
            </button>
        </a>
        to register As Developer!
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <style>
        .register-now__note {
            margin: 1rem;
        }

        .register-now__button {
            margin-left: 1rem;
            margin-right: 1rem;
        }
    </style>
}
