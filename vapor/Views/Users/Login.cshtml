@model vapor.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = "_LoginLayout";
}

<h1>Vapor. Conquer The Battlefield </h1><i class="bi bi-controller"></i>

<hr />
    <div class="row text-center bg-dark text-white d-flex justify-content-center">
        <div class="col-md-4 text-center bg-dark text-white">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control text-center" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
            @if (ViewBag.Error != null)
            {
                <div class="text-danger">@ViewBag.Error</div>
            }
        </div>
    </div>

    <div class="row text-center bg-dark text-white">
        Not registered? <a asp-action="Register">Click here</a> to register
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
