@model IEnumerable<vapor.Models.User>

@{
    ViewData["Title"] = "Index";
}

<div class="row profile-container">
    @foreach (var item in Model)
    {


    <div class="profile-card">
        @if (item.Type == UserType.Developer)
        {
            <img class="profile-img" src=@Url.Action("GetDeveloperImage","Developers", new {id = item.developerID}) alt="Avatar" width="100" height="100">

        }
        else
        {
            <img class="profile-img" src="~/Image/profile.png" alt="Avatar" width="100" height="100">

        }
    <div class="profile-card">
        <h4><b>@Html.DisplayFor(modelItem => item.Username)</b></h4>
        <p>@Html.DisplayFor(modelItem => item.Type)</p>
        <a class="btn btn-warning w-100" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
        <a class="btn btn-primary w-100" asp-action="Details" asp-route-id="@item.Id">Details</a>
        @if (item.Type == UserType.Customer)
        {
            <a class="btn btn-danger w-100" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        }

    </div>
    </div>
    }
</div>
