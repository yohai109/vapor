@*@model IEnumerable<vapor.Models.Developer>*@

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Avtar
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section Scripts{ 
    <script src="~/js/Developer/Index.js"></script>
    
    <script type="text/html" id="developer_template">
        <tr>
            <td>
                {name}
            </td>
            <td>
                {image}
            </td>
            <td>
                <a href="/Developers/Edit/{id}">Edit</a> |
                <a href="/Developers/Details/{id}">Details</a> |
                <a href="/Developers/Delete/{id}">Delete</a>
            </td>
        </tr>
    </script>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 col-12 mb-3">
            <div class="card bg-dark text-black h-100">
                <div class="embed-responsive embed-responsive-16by9">
                    <img class="card-img card-img-top embed-responsive-item" src=@item.avatar>
                </div>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.name</h5>
                 
                    <div style="margin-top: auto;" class="row">
                        <span class="col-12">
                            <a asp-action="Details" asp-route-id="@item.id" class="btn btn-primary w-100">Details</a>
                        </span>
                        <span class="col-12 my-1">
                            <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning w-100">Edit</a>
                        </span>
                        <span class="col-12">
                            <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger w-100">Delete</a>
                        </span>
                    </div>

                </div>
            </div>
        </div>
    }
</div>